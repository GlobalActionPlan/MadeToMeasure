<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="view.main_macro"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="MadeToMeasure">
<body>

<metal:head fill-slot="head">
    <script type="text/javascript">
        $(document).ready(function(){
            $('.sort_me').sortable({
                tolerance: 'pointer',
                forceHelperSize: true,
                placeholder: 'list-group-item'
            });
        });
    </script>
</metal:head>
<div metal:fill-slot="page_heading"></div>
<div metal:fill-slot="content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Reoder sections</h3>
        </div>
        <div class="panel-body">
            <form method="post" class="deform">
                <fieldset>
                    <ul class="list-group sort_me">
                      <li class="list-group-item" tal:repeat="obj context.values()"
                         href="${request.resource_url(obj)}">
                        <input type="hidden" name="items" value="${obj.__name__}" />
                        ${obj.get_translated_title()|obj.title}
                        <span class="label label-default" tal:condition="hasattr(obj, 'question_ids')">${len(obj.question_ids)}</span>
                        <span class="badge">${obj.content_type}</span>
                      </li>
                    </ul>
                    <button id="deformsave" name="save" type="submit" class="btn btn-primary" value="save">
                        <span i18n:translate="">Save</span>
                    </button>
                    <button id="deformcancel" name="cancel" type="submit" class="btn btn-default" value="cancel">
                        <span i18n:translate="">Cancel</span>
                    </button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
</body>
</html>

